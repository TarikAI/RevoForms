# ===========================================
# RevoForms Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# REQUIRED - Database & Auth
# ===========================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (use Supabase connection pooler for serverless)
DATABASE_URL=postgresql://postgres:[PASSWORD]@[PROJECT].pooler.supabase.com:6543/postgres?pgbouncer=true

# NextAuth (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=generate-a-32-character-secret-here
NEXTAUTH_URL=https://your-domain.vercel.app

# App URL
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# ===========================================
# REQUIRED - AI Providers (at least one)
# ===========================================

# Primary AI: Z.ai (recommended)
ZAI_API_KEY=your-zai-api-key
ZAI_BASE_URL=https://api.z.ai/api/coding/paas/v4
ZAI_MODEL=glm-4.6

# Fallback AI: OpenRouter
OPENROUTER_API_KEY=your-openrouter-key

# ===========================================
# OPTIONAL - Image Generation
# ===========================================

# OpenAI DALL-E (optional - falls back to Pollinations if not set)
OPENAI_API_KEY=your-openai-api-key

# Stability AI (optional)
STABILITY_API_KEY=your-stability-api-key

# NanoBanana for PDF filling/handwriting (optional)
NANOBANANA_API_KEY=your-nanobanana-api-key
NANOBANANA_BASE_URL=https://api.nanobanana.com/v1

# ===========================================
# OPTIONAL - Integrations
# ===========================================

# Google OAuth (for Google Sheets integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Notifications (Resend recommended)
RESEND_API_KEY=your-resend-api-key

# Alternative: SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# ===========================================
# OPTIONAL - Features Flags
# ===========================================

NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_3D_AVATAR=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_TEMPLATES=true

# ===========================================
# OPTIONAL - Analytics & Monitoring
# ===========================================

# Vercel Analytics (auto-enabled on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Set to 'development' for local dev, 'production' for deployed
NODE_ENV=development
