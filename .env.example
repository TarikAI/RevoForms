# RevoForms Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# AI PROVIDERS (At least one is required)
# ===========================================

# Primary AI Provider - Z.ai (Recommended)
ZHIPU_API_KEY=your_zhipu_api_key_here

# Fallback AI Provider - OpenRouter
OPENROUTER_API_KEY=your_openrouter_key_here

# Alternative - OpenAI (if using directly)
OPENAI_API_KEY=your_openai_key_here

# ===========================================
# DATABASE (Optional - for cloud sync)
# ===========================================

# Supabase (for future cloud features)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ===========================================
# INTEGRATIONS (Optional)
# ===========================================

# Google OAuth (for Google Sheets)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email Service (SendGrid)
SENDGRID_API_KEY=

# Stripe (for payments)
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ===========================================
# APPLICATION
# ===========================================

# App URL (for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# ===========================================
# DEVELOPMENT
# ===========================================

# Node environment
NODE_ENV=development
